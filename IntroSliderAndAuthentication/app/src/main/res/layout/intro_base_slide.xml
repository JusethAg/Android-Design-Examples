<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSlide"
            android:layout_width="@dimen/img_slide_side"
            android:layout_height="@dimen/img_slide_side"
            android:layout_marginBottom="@dimen/img_slide_margin"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/titleSlide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/text_margin"
            android:textSize="@dimen/text_size_subheading"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_body"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>